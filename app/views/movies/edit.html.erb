<%=turbo_frame_tag dom_id(@movie) do %>
<%= form_with(model: @movie, class: "contents") do |form| %>
<div class="grid grid-cols-5">
  <div class="p-1 border"><%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %></div>
  <div class="p-1 border"><%= form.collection_select :artist_id, Artist.all, :id, :name, {}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %></div>
  <div class="p-1 border"><%= form.text_field :short_description, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %></div>
  <div class="p-1 border"><%= form.number_field :year, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %></div>
  <div class="p-1 border">
    <%= form.submit class: "rounded-lg py-3 ml-2 px-5 bg-blue-400 inline-block font-medium" %>
    <%= link_to 'Cancel', movie_path(@movie), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
<% end %>
<% end %>