<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-10">
    <h1 class="font-bold text-4xl">Movies</h1>
    <%= link_to 'New movie', new_movie_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="grid grid-cols-5">
    <div class="p-1 font-bold border bg-slate-100">Title</div>
    <div class="p-1 font-bold border bg-slate-100">Artist</div>
    <div class="p-1 font-bold border bg-slate-100">Short Description</div>
    <div class="p-1 font-bold border bg-slate-100">Year</div>
    <div class="p-1 font-bold border bg-slate-100">Actions</div>
  </div>

  
  <%= turbo_stream_from :movies %>
  <% @movies.each do |movie| %>
    <%= render partial: 'movie', locals: {movie: movie} %>
  <% end %>
</div>
